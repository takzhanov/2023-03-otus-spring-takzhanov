<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="csvQuestionRepository" class="io.github.takzhanov.otus.spring.lesson01.dao.CsvQuestionRepository">
        <constructor-arg value="questions.csv"/>
    </bean>

    <bean id="systemOutPrintStreamFactory"
          class="io.github.takzhanov.otus.spring.lesson01.utils.SystemOutPrintStreamFactory"/>

    <bean id="systemOutPrintStream" factory-bean="systemOutPrintStreamFactory" factory-method="get"/>

    <bean id="outputServiceImpl" class="io.github.takzhanov.otus.spring.lesson01.service.OutputServiceImpl">
        <constructor-arg ref="systemOutPrintStream"/>
    </bean>

    <bean id="simpleQuestionPrinter" class="io.github.takzhanov.otus.spring.lesson01.service.QuestionPrinterImpl">
        <constructor-arg ref="outputServiceImpl"/>
    </bean>

    <bean class="io.github.takzhanov.otus.spring.lesson01.service.DemoQuizService">
        <constructor-arg ref="csvQuestionRepository"/>
        <constructor-arg ref="simpleQuestionPrinter"/>
    </bean>
</beans>
